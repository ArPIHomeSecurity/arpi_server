Screen {
    overflow: auto;
}

#simulator {
    layout: grid;
    grid-size: 4;
    grid-gutter: 1 2;
    grid-columns: 1fr;
    grid-rows: 1fr 1fr 1fr 1fr 1fr 1fr;
    margin: 1 2;
    min-height: 25;
    min-width: 26;
    height: 100%;
}

Button {
    width: 100%;
    height: 100%;
}

.button {
    background: green 60%;
    color: white 100%;
}

.button-pressed {
    background: red 50%;
    color: black 100%;
}