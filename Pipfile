[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[scripts]
start-server = "flask --debug --app server run --host=0.0.0.0 --port=8080"
start-monitor = "flask --app monitor.service:create_app run --no-reload --host=0.0.0.0 --port=8081"
start-nginx = "./scripts/start_nginx.sh"
start-database = "./scripts/start_database.sh"
start-mqtt = "./scripts/start_mqtt.sh"
start-simulator  = "textual run --dev ./src/bin/simulator.py"
start-simulator-web  = "textual serve --dev -p 8888 ./bin/simulator.py"
create-package = "tar -cvzf arpi-server.tar.gz --exclude='__pycache__' etc scripts src Pipfile Pipfile.lock"
bump-version = "scripts/bump_version.py"

